<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9191f5"
    tools:context="com.admadimurtiwikanagmail.a02.layer3weding">


    <ImageView
        android:paddingTop="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/weding4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="80dp"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        android:layout_below="@id/imageview"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:textColor="#070707"
                android:paddingTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_organizer_weding"
                android:textSize="15dp"
                android:id="@+id/textview1"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <TextView
                android:textColor="#070707"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="MAHKOTA ENTERPRISE"
                android:gravity="center"
                android:id="@+id/textview2"
                android:layout_gravity="center"
                />

            <TextView
                android:textColor="#070707"
                android:paddingTop="20px"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="@string/describtionweding"
                android:id="@+id/textview3"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                />

            <TextView
                android:textColor="#070707"
                android:paddingTop="20px"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="Email Us : kontak@klikmahkota.com
Call Us :(024) 356 0090"
                android:id="@+id/textview4"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

